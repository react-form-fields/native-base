{
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "autoFix": true,
      "language": "typescript"
    },
    {
      "autoFix": true,
      "language": "typescriptreact"
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*?.js": {
      "when": "$(basename).tsx"
    },
    "components/**/*.d.ts": true,
    "decorators/**/*.d.ts": true,
    "ConfigProvider/**/*.d.ts": true,
    "shared/**/*.d.ts": true,
    "Select/**/*.d.ts": true,
    "hooks/**/*.d.ts": true,
    "mask/**/*.d.ts": true,
    "validator/**/*.d.ts": true,
    "interfaces/**/*.d.ts": true,
    "helpers/**/*.d.ts": true,
    "*.d.ts": true,
    "declarations/*.d.ts": false,
    "**/*.map": {
      "when": "$(basename)"
    }
  }
}